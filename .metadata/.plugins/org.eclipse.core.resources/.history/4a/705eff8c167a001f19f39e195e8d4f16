<title>구구단</title>
<style>
    table {
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid black;
        padding: 5px;
        text-align: center;
    }
</style>
</head>
<body>
	<h1>Hello SSAFY</h1>
	<h3>안녕 싸피!!!</h3>
	<h5><% out.println(name); %>님 안녕하세요.</h5>
	<h5><%= name %>님 안녕하세요.</h5>
	<a href="/basic_jsp/index.jsp">홈으로</a></br>

	<table>
		<%
			// 구구단의 각 단을 세로로 출력
			for (int i = 2; i < 10; i++) {
				out.println("<tr>");
				out.println("<th>" + i + "단</th>"); // 각 단 제목
				for (int j = 1; j < 10; j++) {
					out.println("<td>" + i + " * " + j + " = " + (i * j) + "</td>");
				}
				out.println("</tr>");
			}
		%>
	</table>
</body>
